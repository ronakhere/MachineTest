<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d9f6fc" />
            <gradient android:angle="-90" android:startColor="#e6f5fa" android:endColor="#E0F3FA"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d9f6fc" />
            <solid android:color="#d9f6fc"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d9f6fc" />
            <gradient android:angle="-90" android:startColor="#e9f4f7" android:endColor="#d9f6fc" />
        </shape>
    </item>
</selector>