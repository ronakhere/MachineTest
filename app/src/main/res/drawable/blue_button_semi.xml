<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1297c9" />
            <gradient android:angle="-90" android:startColor="#0a80ad" android:endColor="#147ba3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2aa5d4" />
            <solid android:color="#26AEE2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1c91bd" />
            <gradient android:angle="-90" android:startColor="#33aad6" android:endColor="#2b9ac4" />
        </shape>
    </item>
</selector>